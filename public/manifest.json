{
  "manifest_version": 3,
  "version": "0.1.0",
  "name": "MeTLDR",
  "description": "Local and private AI assistant powered by Ollama",
  "action": {
    "default_title": "MeTLDR - Click to open"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "sidePanel",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:11434/*",
    "http://127.0.0.1:11434/*"
  ]
}
